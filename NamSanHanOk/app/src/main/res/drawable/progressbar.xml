<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#99cffe" />
            <size
                android:width="15dp"
                android:height="15dp" />
            <corners android:radius="10dp" />
            <padding
                android:bottom="3dp"
                android:left="5dp"
                android:right="5dp"
                android:top="3dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp">
                    <shape>
                        <solid android:color="#005AA7" />
                        <corners android:radius="10dp" />
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>