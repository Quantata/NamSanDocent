<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Docent.DocentActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/docentToolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <include
            layout="@layout/include_docent_toolbar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/docentImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/namsan1" />

            <TextView
                android:id="@+id/docentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/docentImage"
                android:paddingBottom="5dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:text="삼각동 도편수(都片手) 이승업(李承業) 가옥"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/docentName"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="#919191" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/docentExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/docentName"
                android:paddingBottom="10dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:text="@string/docent_explanation" />

            <TextView
                android:id="@+id/docentDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/docentExplanation"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="상세보기"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/docent_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/docentDetails"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/watchVOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/docent_recyclerView"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:text="영상보기"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/main_media_frame"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_below="@+id/watchVOD">

                <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                    android:id="@+id/playerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    app:resize_mode="fixed_width" />

            </FrameLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/go_new_docent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <include layout="@layout/bottom_get_new_docent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_audio_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:visibility="gone">

        <include layout="@layout/bottom_audio" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/audioBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/headphones"
                android:onClick="onClick" />

            <TextView
                android:id="@+id/audioTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="onClick"
                android:text="Audio" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/locationBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/placeholder"
                android:onClick="onClick" />

            <TextView
                android:id="@+id/locationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="onClick"
                android:text="Location" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>